<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <% if user_signed_in? %>
          <div class="card-block">
            <h4 class="card-title"><%= current_user.name %></h4>
            <h6 class="card-subtitle text-muted"><%= link_to current_user.username, user_path(current_user.username) %></h6>
          </div>
        <% else %>
          <div class="spacer"></div>
          <p><%= link_to "Sign in", signin_path, class: "card-link" %> to share a session.</p>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <p><%= link_to "Share a Sesh", new_sharesesh_path, class: "btn btn-primary" %></p>
      <% end %>
    </div>
    <div class="col-md-8" style="border:none;">
        <% @shareseshes.each do |sharesesh| %>
          <div class="col-md-6 col-md-6">
            <div class="card">
              <%= image_tag sharesesh.image(:card), class: "card-img-top img-fluid" %>
              <div class="card-block">
                <h4 class="card-title"><%= sharesesh.subject %></h4>
                <p class="card-text"><strong><%= link_to sharesesh.user.username, user_path(sharesesh.user.username) %></strong> on <%= sharesesh.when %><br>Location: <%= sharesesh.where %></p>
                <p class="card-text"><%= sharesesh.yoursesh.truncate(40) %></p>
                <p><%= link_to 'See Sesh', sharesesh %></p>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>