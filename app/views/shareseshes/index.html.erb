<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <% if user_signed_in? %>
          <div class="card-block">
            <h4 class="card-title"><%= current_user.name %></h4>
            <h6 class="card-subtitle text-muted"><%= current_user.username %></h6>
            <h6 class="card-subtitle text-muted"><%= current_user.email %></h6>
          </div>
          <img src="..." alt="Card image">
          <div class="card-block">
            <p class="card-text">Some quick example text of the user's bio (optional)</p>
            <a href="#" class="card-link">Edit</a>
          </div>
        <% else %>
          <div class="spacer"></div>
          <p><%= link_to "Sign in", signin_path, class: "card-link" %> to share a session.</p>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <% @shareseshes.each do |sharesesh| %>
          <div class="col-md-6 col-md-6">
            <img class="card-img-top" src="..." alt="Card image cap">
            <div class="card-block">
              <h4 class="card-title"><%= sharesesh.subject %></h4>
              <p class="card-text">When: <%= sharesesh.when %><br>Where: <%= sharesesh.where %></p>
              <p class="card-text"><%= sharesesh.yoursesh %></p>
              <p><%= link_to 'See Sesh', sharesesh %></p>
            </div>
          </div>
        <% end %>
      </div>
      
      <% if user_signed_in? %>
        <p><%= link_to "Share a Sesh", new_sharesesh_path, class: "btn btn-primary" %></p>
      <% end %>

    </div>
  </div>
</div>